{
    "name": "splot/assets-module",
    "description": "Assets manager module for Splot Framework.",
    "keywords": ["assets", "js", "css", "minify", "uglify"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michał Pałys-Dudek",
            "email": "michal@michaldudek.pl"
        }
    ],
     "require": {
        "php": ">=5.3.3",
        "michaldudek/foundation": ">0.9,<2.0",
        "splot/framework": ">=0.8,<2.0",
        "kriswallsmith/assetic": "~1.2.0",
        "natxet/CssMin": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "suggest": {
        "patchwork/jsqueeze": "SplotAssetsModule integrates with JSqueeze JavaScript minifier"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9.x-dev"
        }
    },
    "minimum-stability": "dev",
    "autoload": {
    	"psr-4": { 
            "Splot\\AssetsModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Splot\\AssetsModule\\Tests\\": "tests/"
        }
    }
}
